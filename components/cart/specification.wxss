/* components/cart/specification.wxss */

.specification {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100%;
  padding: 0;
  z-index: 152000;
  display: flex;
  flex-direction: column;
}

.mask {
  flex: 1;
  background-color: rgba(55,55,55,.6);
}

.content {
  max-height: 70%;
  background-color: white;
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx 30rpx;
}

.heading {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.heading > .btn-close {
  color: #cbcbcb;
  text-align: center;
  font-size: 50rpx;
  width: 10%;
}

.subtitle {
  color: #c4c4c4;
  font-size: 30rpx;
  margin: 20rpx 0 15rpx;
}

.list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 15rpx 0 15rpx;
}

.list > .item {
  border: 1rpx solid #cbcbcb;
  color: #666;
  border-radius: 10rpx;
  text-align: center;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  min-width: 25%;
  margin-right: 30rpx;
}

.list > .item.active {
  border-color: #ff6634;
  color: #ff6634;
}

.bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;

}

.btn-confirm {
  width: 100%;
  background-color: #ff6634;
  color: white;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 40rpx;
  text-align: center;
}

.more {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 15rpx 0 20rpx;
}

.more > .more-price {
  color: #fc663b;
}
.more > .more-count {
  width: 25%;
}
