/* components/cart/submit-order-bar.wxss */
/* 底端 */
.cart-bar {
  position:fixed; bottom:0;
  background-color: white;
  width: 100%;
  height: 128rpx;
  border-top: #c4c4c4 1rpx solid;
  margin-top: 2rpx;
  padding: 0;
  z-index: 100;
}

.cart-btn-submit {
  width: 100%;
  height: 128rpx;
  color: #fff;
  font-size: 40rpx;
  line-height: 128rpx;
  text-align: center;
  background-color: #fc663b;
}

.cart-left {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 128rpx;
}

.cart-pay-text {
  margin-left: 30rpx;
  font-size: 40rpx;
  color: #000;
}

.cart-price {
  margin-left: 20rpx;
  font-size: 45rpx;
  color: #fc663b;
}
