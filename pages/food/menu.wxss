/**index.wxss**/

/* wrapper 让height有高度 */
.wrapper {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
} 

/* 菜单头部 */
.menu-header {
  padding: 0 30rpx 30rpx;
}

/* 菜单 */
.food-menu {
  flex: 1;

  display: flex;
  flex-direction: row;
  margin-bottom: 128rpx;
}

.food-menu > .list {
  flex: 1;
  padding: 0 30rpx 0 20rpx;
}

.tag {
  margin: 10rpx 0 20rpx;
}

.tag > .desk {
  background-color: #f3f3f3;
  color: #777;
  font-size: 30rpx;
  padding: 5rpx 20rpx;
}
