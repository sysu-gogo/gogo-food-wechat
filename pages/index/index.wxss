/* pages/index/index.wxss */

page {
  background-color: #f1f1f1;
}

.container {
  padding: 20rpx 50rpx 0;
}

.ad {
  width: 100%;
  margin: 0 auto;
}

.ad swiper {
  height: 480rpx;
}

.ad image {
  width: 100%;
  border-radius: 10rpx;
}

.heading {
  padding: 30rpx 0;
}

.heading > .title {
  font-size: 50rpx;
  margin-bottom: 10rpx;
}

.heading > .subtitle {
  font-size: 30rpx;
  font-style: italic;
  color: #666;
}

.mask {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  background-color: rgba(55,55,55,.6);
}